<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TextH2">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextH2White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextH3">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextH4">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextBigWarn">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextNormal">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextNormalWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextImageLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="RatingBarAccent" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/accent_alpha</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="RatingBarRed" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/accent_alpha</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="DialogLight" parent="AlertDialog.AppCompat.Light">
        <item name="android:background">@color/primary_dark</item>
    </style>

</resources>
